<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow>
        <LinearLayout
            android:id="@+id/today_sometime_simple_time_picker"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_today_sometime_simple_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_today_simepletime_picker"/>
            <TextView
                android:id="@+id/txt_today_sometime_simple_time_picker"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Today Sometime"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tomorrow_sometime_simpletime_picker"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tomorrow_sometime_simple_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_tomorrow_sometime_simple_time_picker"/>
            <TextView
                android:id="@+id/txt_tomorrow_sometime_simple_time_picker"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Tomorrow Sometime"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/simpletime_picker_tomorrow_afternoon"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_simpletime_picker_tomorrow_afternoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_tomorrow_afternoon1"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_tomorrow_afternoon"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Tomorrow Afternoon"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:id="@+id/simpletime_picker_tomorrow"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_simpletime_picker_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_tomorrow1"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_tomorrow"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Tomorrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/simpletime_picker_tomorrow_evening"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_simpletime_picker_tomorrow_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_tomorrow_evening"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_tomorrow_evening"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Tomorrow night"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/simpletime_picker_nextweek"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_simpletime_picker_nextweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_nextweek"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_nextweek"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Next Week"/>
        </LinearLayout>
    </TableRow>
    <TableRow>
        <LinearLayout
            android:id="@+id/simpletime_picker_pick_time"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ic_simpletime_picker_pick_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_pickdate"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_pick_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Pick Date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_tomorrow_evening"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Today Night"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/simpletime_picker_notime"
            android:layout_height="80dp"
            android:layout_width="60dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="?attr/selectableItemBackground"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_simpletime_picker_notime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_simpletime_picker_notime"/>
            <TextView
                android:id="@+id/txt_simpletime_picker_notime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Time"/>
        </LinearLayout>
    </TableRow>




</TableLayout>