<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <EditText
        android:id="@+id/check_main_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:gravity="top"
        android:hint="what do you want to do?"
        android:background="@color/addviewbackground"/>
    <EditText
        android:id="@+id/check_todo_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:textSize="34sp"
        android:background="@color/addviewbackground"
        android:hint="Type your time in here"
        android:maxLines="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ToggleButton
            android:id="@+id/check_repeat_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="@color/addviewbackground"/>
        <ToggleButton
            android:id="@+id/check_done_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:text="isDone"
            android:background="@color/addviewbackground"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="1dp">
            <EditText
                android:id="@+id/check_extra_data_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ExtraDataType:"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="1dp">
            <EditText
                android:id="@+id/check_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="notification:"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="7dp"
            app:cardCornerRadius="1dp">
            <EditText
                android:id="@+id/check_operation_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Operation Type:"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <Button
            android:id="@+id/check_save_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:text="SAVE"
            android:background="@color/saveButton"/>
        <Button
            android:id="@+id/check_delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp"
            android:text="DELETE"
            android:background="@color/deleteButton"/>
        <Button
            android:id="@+id/check_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp"
            android:text="CANCEL"
            android:background="@color/cancelButton"/>
    </LinearLayout>
</LinearLayout>